@model appointment_backend.Models.Patient

@{
    ViewData["Title"] = "Crear Paciente";
}

<!-- =============================================
     🩺 VISTA: CREATE PACIENTE
     =============================================
     - Vista creada con Bootstrap 5.
     - Corrige la acción del formulario.
     - Mantiene validaciones y estructura original.
     ============================================= -->

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Registrar nuevo paciente</h3>
        </div>

        <div class="card-body">
            <!-- Enlaza correctamente con el método Register del controlador -->
            <form asp-action="Create" method="post">
                <!-- Campo: Nombre completo -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Nombre completo</label>
                    <input asp-for="Name" class="form-control" placeholder="Ingrese el nombre completo" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Campo: Edad -->
                <div class="mb-3">
                    <label asp-for="Age" class="form-label">Edad</label>
                    <input asp-for="Age" class="form-control" type="number" min="1" max="100" placeholder="Edad del paciente" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <!-- Campo: Teléfono -->
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label">Teléfono</label>
                    <input asp-for="Phone" class="form-control" placeholder="Ej: 3001234567" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <!-- Campo: Correo electrónico -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Correo electrónico</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="Ej: paciente@gmail.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Botones -->
                <div class="text-end">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Scripts de validación -->
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
