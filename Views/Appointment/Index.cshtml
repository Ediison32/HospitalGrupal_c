@model IEnumerable<appointment_backend.Models.Appointment>

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    
    <h2>List Of Appointments</h2>

    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-outline-primary btn-sm w-100" asp-action="Create" asp-controller="Appointment">Add New Appointment</a>
    </div>

   
    <div class="col-md-12">
        @* List of appointments *@
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Patient</th>
                <th scope="col">Doctor</th>
                <th scope="col">Date</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Patient.Name</td>
                    <td>@item.Doctor.Name</td>
                    <td>@item.Date</td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-controller="Appointment" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-outline-secondary btn-sm" asp-action="Edit" asp-controller="Appointment" asp-route-id="@item.Id">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" asp-controller="Appointment" method="post" style="display: inline">
                            @Html.AntiForgeryToken()
                        </form>
                        <form asp-action="Delete" asp-route-id="@item.Id" asp-controller="Appointment" method="post"
                              style="display: inline">
                            @Html.AntiForgeryToken()

                            <button type="submit"
                                    class="btn btn-outline-danger btn-sm"
                                    onclick="return confirm('Â¿Do you want to delete this medic appointment?');">
                                Delete
                            </button>
                        </form>
                        <a class="btn btn-outline-success btn-sm" asp-action="SendEmailAsync" asp-route-id="@item.PatientId" asp-controller="EmalService">Email</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        
    </div>
    
    
</div>